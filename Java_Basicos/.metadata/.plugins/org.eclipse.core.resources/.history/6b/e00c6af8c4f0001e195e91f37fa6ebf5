package principal;

public class Panel_5_Premios {
	public static void main(String[] args) {
		//Generar un panel con 49 casillas en los cuales haya 5 premios aleatorios
		final int FILAS=7;
		final int COLUMNAS=7;
		int[][] panel= new int[FILAS][COLUMNAS];
		int fila, columna;
		int premios=0;

		//Generar 5 casillas aleatorias con premios entre las filas y columnas
		do {
			fila = (int) (Math.random()*(FILAS-1));
			columna = (int) (Math.random()*(COLUMNAS-1));
			if(panel[fila][columna]!=1) { // Si mo esta ocupada, la ocupamos
				panel[fila][columna] = 1;
				premios++;
			}
		}while (premios <5) ;
		mostrarPanel(panel);
	}

		static void mostrarPanel(int [][]panel) {
			for(int i=0; i<panel.length; i++) {
				for(int j=0; j<panel[i].length; j++) {
					System.out.print(panel[i][j]+"|");
				}
				System.out.println();
			}
		



	}


}
