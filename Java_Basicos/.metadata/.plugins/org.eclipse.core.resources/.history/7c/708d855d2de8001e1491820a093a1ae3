package principal;

public class ComprobarDireccionesCompleto {

    public static void main(String[] args) {
        String emails = "andregp@gmail.com,alfonso_garcia@hotmail.es,btorija@gmail.com,leticia-perez98@yahoo.es,leopoldoJimenez@hotmail.com,cominidad-madrid@cm.org,vodagone_informacion@vodafone.net";

     
        String[] emailArray = emails.split(",");

        String[] dominios = obtenerDominios(emailArray);

        int[] contarDom = new int[dominios.length];

        for (String email : emailArray) {
            for (int j = 0; j < dominios.length; j++) {
                if (email.endsWith(dominios[j])) {
                    contarDom[j]++;
                    break;
                }
            }
        }
        for (int i = 0; i < dominios.length; i++) {
            System.out.println("Dominio: " + dominios[i] + ", Cantidad: " + contarDom[i]);
        }
    }


    static String[] obtenerDominios(String[] direcciones) {
        String[] dominios = new String[direcciones.length];
        for (int i = 0; i < direcciones.length; i++) {

            String[] partes = direcciones[i].split("@");
  
            dominios[i] = partes[1];
        }
        return dominios;
    }
}
